        android:gravity="center"
        android:textAlignment="center"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/username"
        android:layout_weight="50"/>

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/score"
        android:layout_weight="50"/>

</LinearLayout>